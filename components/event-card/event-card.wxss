.sc-wrapper{
  padding: 30rpx 30rpx 60rpx;
}
.sc-wrp-in{
  border-radius: 2px;
  box-shadow: 0px 0px 4px 2px rgba(216, 213, 213, 0.5);
}
.sc-header{
  height: 142rpx;
  padding: 0 50rpx;
  background-image: linear-gradient(to top, #3D6EB6, #8BA1E3);
  display: flex;
  align-items: center;
  position: relative;
}
.city-img{
  position: absolute;
  right: 0;
  height: 100%;
  width: 150rpx;
}
.sc-body{
  width: 690rpx;
  height: 560rpx;
  padding: 30rpx 50rpx;
  position: relative;
}
.sc-body .sc-body-bg{
  position: absolute;
  left: 0;
  top: 0;
  z-index: -99;
  width: 100%;
  height: 100%;
}
.event-info{
  line-height: 48rpx;
  color: rgba(51, 51, 51, 1);
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 9;
  overflow: hidden;
}
.sc-bottom{
  padding: 20rpx 20rpx 0;
  display: flex;
  justify-content: space-between;
}
.sc-bottom text{
  line-height: 30rpx;
  color: rgba(153, 153, 153, 1);
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
}
.event-time{
  width: 200rpx;
  height: 100%;
  line-height: 142rpx;
  color: #fff;
  font-size: 68rpx;
}
.h-midline{
  width: 3rpx;
  height: 56rpx;
  background-color: rgba(255,255,255,.6);
}
.event-time image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 17rpx;
}
.event-address{
  height: 100%;
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #fff;
}
.event-address text{
  line-height: 45px;
  color: rgba(51, 51, 51, 1);
  font-size: 32rpx;
  font-family: PingFangSC-Semibold;
}
.event-address image{
  height: 30rpx;
  width: 30rpx;
  margin-right: 17rpx;
}
.event-address .add-icon{
  color: #fff;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  height: 38rpx;
  line-height: 38rpx;
  margin: 10rpx 0;
}
.from-wp{
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  color: rgba(153, 153, 153, 1);
  font-size: 22rpx;
  text-align: right;
  margin-top: 40rpx;
}