.footer-bar{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    border-top: 1px solid rgba(238, 238, 238, 1);
}
.footer-bar-item{
  height: 80rpx;
  width: 80rpx;
}
.footer-bar-type1 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.footer-bar-type1 image{
  height: 40rpx;
  width: 40rpx;
}
.footer-bar-type1 text{
  line-height: 28rpx;
  color: rgba(102, 102, 102, 1);
  font-size: 20rpx;
}