.page{
  height: 100%;
  display: flex;
  justify-content: center;
}
.login-wrapper{
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 0 80rpx;
}
.logo{
  width: 386rpx;
  height: 85rpx;
  margin-bottom: 120rpx;
  margin-top: 200rpx;
}
.input-box{
  width: 100%;
  height: 80rpx;
  margin-bottom: 40rpx;
  position: relative;
}
.input-box image{
  height:35rpx;
  width:35rpx;
  position:absolute;
  left:28rpx;
  top:25rpx;
}
.login-input{
  border-radius: 10rpx;
  height: 80rpx;
  border: 1rpx solid rgba(221, 221, 221, 1);
  font-size: 32rpx;
  padding-left: 90rpx;
}
.login-btn{
  width: 100%;
  height: 100rpx;
  border-radius: 10rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  color: #fff;
  margin-top: 20rpx;
}
button[disabled][type=primary]{
  background-color: #eee!important;
  color: #999!important;
}
button[type=primary] {
  color:#FFF!important;
  background-color: rgba(63, 135, 245, 1)!important;
}
.login-btn-text{
  margin: 0 15rpx;
}
button::after{
  border: none;
}
.phcolor{
  color: #999;  
}
.wechat{
  height: 100rpx;
  width: 100rpx;
  margin-top: 100rpx;
}