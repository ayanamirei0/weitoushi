.index-body .list-label .btn{
    display: inline-block;
    color: #ffffff;
    background-color: #E3616B;
    border: 1px solid #E3616B;
    width: 100rpx;
    height: 32rpx;
    text-align: center;
    line-height: 32rpx;
    border-radius: 3px;
}
.index-body .list-label text {
    margin-right: 16rpx;
    color: #666;
    font-size: 12px;
}
.index-body .list-label .icon{
    width: 72rpx;
    height: 32rpx;
    vertical-align: middle;
}
.index-body .list-card-taps .label text{
    margin-right: 16rpx;
}
.index-body .list-card-taps{
    display: flex;
    justify-content: space-between;
}
.index-body .list-card-taps .date{
    color: #666666;
    font-size: 12px;
    margin-top: 12rpx;

}
